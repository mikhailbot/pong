<section class="mw6 center">

  <ul class="list p10 pl0 center">
    <%= for host <- @hosts do %>
      <li class="flex items-center lh-copy pa3 ph0-l bb b--black-10">
          <div class="pl3 flex-auto">
            <span class="b db"><%= host.name %></span>
            <span class="db black-70"><%= host.ip_address %></span>
          </div>
          <div>
            <span class="b green">45ms</span>
          </div>
      </li>
    <% end %>
  </ul>
</section>
